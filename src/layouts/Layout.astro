---
import "@fontsource-variable/source-serif-4";
import Preloader from "@components/Preloader.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="Portafolio para mostrar mis poryectos"
      content="Portafolio de Ronaldo Moctezum"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ronaldo Moctezuma</title>
  </head>
  <body
    class="min-h-screen [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
  >
    <Preloader />
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24">
    </div>
    <Header />
    <main
      class="flex flex-col gap-10 sm:gap-16 md:gap-20 lg:gap-24 px-4 sm:px-8 md:px-16 xl:px-32"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark light;
  }

  html {
    font-family: "Source Serif 4 Variable", system-iu, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background: #0b0b0b;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  body::-webkit-scrollbar {
    width: 8px;
    height: 5px;
  }

  body::-webkit-scrollbar-track {
    background: transparent;
  }

  body::-webkit-scrollbar-thumb {
    background-color: #0a0909;
    border-radius: 10px;
    border: 1px solid white;
  }

  body::-webkit-scrollbar-thumb:hover {
    background-color: #1c1b1b;
  }
</style>
